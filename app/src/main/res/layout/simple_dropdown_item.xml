<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView_Ligne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimaryDark"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:text="B12 "
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_Arret"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="Salengro"
        app:layout_constraintStart_toEndOf="@+id/textView_Ligne"
        app:layout_constraintTop_toTopOf="@+id/textView_Ligne" />

    <TextView
        android:id="@+id/textView_Sens"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Chicago"
        app:layout_constraintStart_toEndOf="@+id/textView_arrow"
        app:layout_constraintTop_toTopOf="@+id/textView_Arret" />

    <TextView
        android:id="@+id/textView_arrow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="-->"
        app:layout_constraintStart_toEndOf="@+id/textView_Arret"
        app:layout_constraintTop_toTopOf="@+id/textView_Arret" />
</android.support.constraint.ConstraintLayout>