<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    >

    <TextView
        android:id="@+id/textView_Ligne_adapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimaryDark"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:text="B12 "
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_Arret_adapter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Salengro"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView_Ligne_adapter"
        app:layout_constraintTop_toTopOf="@+id/textView_Ligne_adapter"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView_Sens_adapter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="Chicago"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView_arrow"
        app:layout_constraintTop_toTopOf="@+id/textView_arrow" />

    <ImageView
        android:id="@+id/textView_arrow"
        android:layout_width="18dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_Arret_adapter"
        app:layout_constraintStart_toEndOf="@+id/textView_Arret_adapter"
        app:layout_constraintTop_toTopOf="@+id/textView_Arret_adapter"
        app:srcCompat="@drawable/arrow_right_direction" />
</android.support.constraint.ConstraintLayout>